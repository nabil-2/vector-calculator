<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15sp"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <TextView
        android:id="@+id/tvarw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8sp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="-190sp"
        android:text="→"
        android:textSize="40sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20sp"
            android:text="A = "
            android:textSize="30sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="("
            android:textScaleX="0.4"
            android:textSize="150sp"
            android:textColor="#000000"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <EditText
                android:id="@+id/eingabe_1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/eingabe_2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/eingabe_2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/eingabe_3"
                app:layout_constraintTop_toBottomOf="@id/eingabe_1"/>

            <EditText
                android:id="@+id/eingabe_3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eingabe_2" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text=")"
            android:textScaleX="0.4"
            android:textSize="150sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvarw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8sp"
        android:layout_marginTop="70sp"
        android:layout_marginBottom="-210sp"
        android:text="→"
        android:textSize="40sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20sp"
            android:text="B = "
            android:textSize="30sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="("
            android:textScaleX="0.4"
            android:textSize="150sp"
            android:textColor="#000000"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <EditText
                android:id="@+id/eingabe_4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/eingabe_5"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/eingabe_5"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/eingabe_6"
                app:layout_constraintTop_toBottomOf="@id/eingabe_4"/>

            <EditText
                android:id="@+id/eingabe_6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eingabe_5" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:textScaleX="0.4"
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text=")"
            android:textSize="150sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/berechnen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Berechnen"
                android:layout_marginTop="60dp"/>

            <Button
                android:id="@+id/reset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Zurücksetzen"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/loesung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>

</LinearLayout>