<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15sp"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <TextView
        android:id="@+id/tvarw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-8sp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="-190sp"
        android:text="→"
        android:textSize="40sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20sp"
            android:text="A = "
            android:textSize="30sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="150sp"
            android:textColor="#000000"
            android:textScaleX=".4"
            android:fontFamily="sans-serif-thin" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <EditText
                android:id="@+id/vk1_1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:lines="1"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/vk1_2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/vk1_2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                android:lines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/vk1_3"
                app:layout_constraintTop_toBottomOf="@id/vk1_1"/>

            <EditText
                android:id="@+id/vk1_3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                android:lines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vk1_2" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text=")"
            android:textSize="150sp"
            android:textColor="#000000"
            android:textScaleX=".4" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tvarw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:layout_marginStart="-10dp"
                android:layout_marginBottom="-20dp"
                android:textSize="40sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B = "
                android:textSize="30sp"
                android:textColor="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="("
            android:textSize="150sp"
            android:textColor="#000000"
            android:textScaleX=".4" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <EditText
                android:id="@+id/vk2_1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/vk2_2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/vk2_2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:imeOptions="actionNext"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/vk2_3"
                app:layout_constraintTop_toBottomOf="@id/vk2_1"/>

            <EditText
                android:id="@+id/vk2_3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textSize="35sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vk2_2" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text=")"
            android:textSize="150sp"
            android:textColor="#000000"
            android:textScaleX=".4" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
               android:id="@+id/btn_berechnen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Berechnen"/>

            <Button
                android:id="@+id/btn_zrcksetzen"
                android:layout_marginStart="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Zurücksetzen" />

        </LinearLayout>



    <TextView
        android:id="@+id/ergebnis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>

</LinearLayout>